<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RezeptSafe.View.QRCodePopup"
             Title="QRCodePopup">
    
    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="QR-Code für dein Rezept" FontSize="20" HorizontalOptions="Center"/>
        <Image Source="qrcode.png" HeightRequest="200" WidthRequest="200"/>
        <Button Text="Schließen" Clicked="OnCloseClicked"/>
    </VerticalStackLayout>
</ContentPage>