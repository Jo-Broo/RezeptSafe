<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RezeptSafe.MainPage"
             Title="RezeptSafe" BackgroundColor="#FFFDD0">

    <ScrollView>
        <Grid>
            <!-- Hauptinhalt -->
            <Grid>
                <Label Text="Willkommen"
                   FontSize="24"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            </Grid>

            <!-- Overlay -->
            <BoxView x:Name="Overlay"
                 BackgroundColor="#00000040"
                 IsVisible="False"
                 Opacity="0"
                 InputTransparent="False">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCloseMenuClicked" />
                </BoxView.GestureRecognizers>
            </BoxView>

            <!-- Rechtes Menü -->
            <Grid x:Name="SideMenu"
              BackgroundColor="White"
              WidthRequest="250"
              HorizontalOptions="End"
              VerticalOptions="Fill"
              TranslationX="250">
                <!-- Start außerhalb des Bildschirms -->
                <VerticalStackLayout Padding="20" Spacing="15">
                    <Label Text="Menü" FontSize="20" FontAttributes="Bold" />
                    <Button Text="Profil" />
                    <Button Text="Einstellungen"
                        Clicked="OnSettingsClicked" />
                </VerticalStackLayout>
            </Grid>

            <!-- Menü-Button -->
            <Button Text="☰"
                FontSize="24"
                WidthRequest="50"
                HeightRequest="50"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="10"
                Clicked="OnOpenMenuClicked" />
        </Grid>
    </ScrollView>

</ContentPage>
